import csv
import matplotlib.pyplot as plt
import numpy as np

# Function 1: File I/O - Writing and Reading from a Text File
# Writes a list of numbers to a file and then reads them back as a list of integers.
def write_and_read_txt(filename, numbers):
   # Create a new file (write mode)
    opfile = open(filename, 'w')
    # Writing to the file as a single string
    opfile.write(",".join(str(num) for num in numbers))
    # Ensure changes are saved
    opfile.close()
    # Read again properly and return list of integers
    with open(filename, 'r') as file:
        return [int(x) for x in file.read().split(',')]
# Txt list of numbers
numbers = [1, 2, 3, 4, 5]
# Calls the function
result = write_and_read_txt("output.txt", numbers)
print("Function #1 results:", result)


# Function 2: File I/O - Writing and Reading from a CSV File
# Writes a list of lists to a CSV file and reads it back.
def write_and_read_csv(filename, data):
    # Write the list of lists to a CSV file
    with open(filename, 'w', newline='') as file:
        writer = csv.writer(file)
        writer.writerows(data)
    # Read and return the data as a list of lists
    with open(filename, 'r') as file:
        reader = csv.reader(file)
        # Convert values back to int
        return [[int(x) for x in row] for row in reader]
data = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]
result = write_and_read_csv("output.csv", data)
print ("Function #2 results: ", result)

# Function 3: Reading an Array from a File
# Reads a space-separated array from a text file and converts it to a NumPy array.
def read_array_from_file(filename, data):
    # Create a new file (write mode)
    opfile = open(filename, 'w')
    # Writing to the file as a single string
    opfile.write(",".join(str(x) for x in data))
    # Ensure changes are saved
    opfile.close()
    # Reopen the file in read mode ('r') to read the contents
    with open(filename, 'r') as file:
        # Split the string by commas and convert each part back to an integer
        values = file.read().strip().split(',')
        return np.array([float(x) for x in values])
# List of numbers
data = [1.5, 2.5, 3.5, 4.5, 5.5]
# Call the function
result = read_array_from_file("array.txt", data)
print("Function #3 results:", result)

# Function 4: Plotting Data with plot() and show()
# This function plots a given list of numbers as a line graph.
def plot_data(numbers):
    # Plot the list of numbers and puts a marker on each point and makes a line
    plt.plot(numbers, marker='o', linestyle='-') 
    # Add labels and title to the graph
    plt.xlabel('X-Axis')         # Label x-axis
    plt.ylabel('Y-Axis')         # Label y-axis
    plt.title('Line Graph of Numbers')  # Title

    plt.grid(True)              # Optional: add grid
    plt.show()                  # Display the graph
numbers = [1, 2, 3, 4, 5] # Input
plot_data(numbers)

# Function 5: Density Plot
# This function takes a list of numbers and plots a density plot.
def density_plot(data):
    # Plot histogram with normalization (density=True)
    plt.hist(data, bins=10, density=True) 
    # Add labels and title to the graph
    plt.xlabel("X Axis")
    plt.ylabel("Y Axis")
    plt.title("Density Plot")
    plt.show()
# Generate random data from normal distribution
random_data = np.random.normal(loc=0, scale=1, size=1000)  # Mean 0, SD 1
density_plot(random_data)

